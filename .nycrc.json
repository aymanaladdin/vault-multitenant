{
  "all": true,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/index.ts",
    "src/**/spec.ts"
  ],
  "extension": [
    ".ts"
  ],
  "require": [
    "source-map-support/register",
    "ts-node/register"
  ],
  "sourceMap": true,
  "instrument": true,
  "reporter": ["lcov", "text" ],
  "report-dir": "./coverage"
}